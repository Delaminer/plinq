{
    "manifest_version": 3,
    "name": "Plinq Importer",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "description": "Import contacts from LinkedIn",
    "permissions": ["tabs", "activeTab", "scripting"],
    "host_permissions": [
        "https://linkedin.com/"
    ],
    "background.service_worker": {
        "scripts": ["collectContacts.js"],
        "persistent": false
    }
}